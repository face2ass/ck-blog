    </div>
  </div>

  <%# 标签 %>
  <% if (site.tags.length) { %>
    <div class="aside-section mb-3">
      <h4>标签</h4>
      <div class="tag-list overflowed">
        <div class="tag-item-wrap">
          <% sort_list(site.tags).map(function(t, i){ %>
            <div class="tag-item">
              <a href="<%= url_for(`/tags/${t.name}`) %>">
                #<%= t.name %>
                (<%= t.length %>)
              </a>
            </div>
          <% }) %>
        </div>
        <div class="tag-toggle-trigger" data-expand="展开" data-collapse="收起">
          <svg class="bi me-2">
            <use href="#chevron-expand"></use>
          </svg>
        </div>
      </div>
    </div>
  <% } %>

  <%# 分类 %>
  <div class="aside-section">
    <h4>分类</h4>
    <%- category_tree(site) %>
  </div>

</div>