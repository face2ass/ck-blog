<% if (post.link){ %>
  <h3 class="mb-0">
    <a href="<%- url_for(post.link) %>" target="_blank"><%= post.title %></a>
  </h3>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h3 class="mb-0">
      <a href="<%- url_for(post.path) %>" target="_blank"><%= post.title %></a>
    </h3>
  <% } else { %>
    <h3 class="mb-0"><%= post.title %></h3>
  <% } %>
<% } %>